<!DOCTYPE html>
<html lang="en">
    
    <%- include('../partials/head.ejs') %>

<body>
 
    <%- include('../partials/nav.ejs') %>

    <div class="barre">
        <input class="Nouvel_Commande" id="New_Comm" type="submit" value="Créer une nouvelle Commande" onclick="Ccommande()">
        <input class="Recherche_Commande" id="R_Comm" type="submit" value="Compléter une Commande" >
    </div>

    <div class="page"  >
        <form action="/modifCom" method="GET" id='choix' class="NewGrid">
            <label class='SearchCom'>Numéro commande</label>
            <input class='SearchCom' type='text' name='numCommande' value="<%= searchOptions.numCommande %>">
            <input class='SearchCom' type='submit' value='Rechercher'>
        </form>

        <div class="liste">
            <% if (commandes.length > 0) { %>
                <% commandes.forEach(commande => { %>
                    <%if(!commande.valide) { %>
                        <a class="single" href="/commande/<%= commande._id %>">
                            <h3 class="numéro"><%= commande.numCommande %></h3>
                        </a>   
                    <% } %>
                <% }) %>
            <% } else { %>
                <p>Aucune commande n'est enregistré dans la base de données</p>
            <% } %>
        </div>
    </div>

    <script>
        let on_R_Comm = document.getElementById("R_Comm")
        on_R_Comm.classList.add("on")

        function Ccommande() {
            location.replace("http://localhost:3000/creerCom")
        }

    </script>
    <%- include('../partials/footer.ejs') %>

</body>
</html>