<!DOCTYPE html>
<html lang="en">
    
    <%- include('../partials/head.ejs') %>

<body>

    <%- include('../partials/nav.ejs') %>
    <%- include('../partials/barreProspection.ejs') %>
    
    <div  >

        <% if (cibleDeRoutages.length > 0) { %>
            <% cibleDeRoutages.forEach(cible => { %>
                <%if(cible.valide) { %>
                    <h3 class="nom"><%= cible.titre %></h3>
                    <p> Date de création : <%= cible.dateProspection.toDateString() %></p>
                    <p>Date de validation <%= cible.dateValide.toDateString() %></p> 
                    
                    <% if(Math.abs(new Date() - cible.dateValide.getTime()) >  864000000 ) { %> 
                        <p>Expiré, les individus ne font plus partie de la cible de routage</p>   
                        <% cible.listeIndividus.forEach(individu => individu.statut = 'Client') %>  
                    <% } %> 
                
                
                <%} %>
            <% }) %>
        <% } else { %>
            <p>Pas de publicité à envoyer ou en attente de validation</p>
        <% } %>
    </div>
    <script>
       let on_recup = document.getElementById("recup")
       on_recup.classList.add("on");

    </script>

    <%- include('../partials/footer.ejs') %>

</body>
</html>