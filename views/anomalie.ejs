<!DOCTYPE html>
<html lang="en">
    
    <%- include('./partials/head.ejs') %>

<body>

    <%- include('./partials/nav.ejs') %>
    <div class="barre">
        <input class="Recherche_Anomalie" id="R_An" type="submit" value="Rechercher une anomalie" onclick="Recherche_Anomalie()">
        <input class="courrier" id="C" type="submit" value="Courriers à envoyer" onclick="courrier()">
    </div>
    <script>
        let on_C = document.getElementById("C")
        let on_R_An = document.getElementById("R_An")
        function Recherche_Anomalie(){
            on_R_An.classList.add("on");
            on_C.classList.remove("on");
            choix.innerHTML= "";
            choix.insertAdjacentHTML('afterbegin',"<form action='' method='GET'><label>Numéro Commande</label><input type='text'><label>Nom Individu</label><input type='text'></input><label>Date d'anomalie</label> <input type='date'><input type='submit' value='Rechercher'></form>")
        }
        function courrier(){
            on_C.classList.add("on");
            on_R_An.classList.remove("on");
            choix.innerHTML= "";
            choix.insertAdjacentHTML('afterbegin',"")
        }
    </script>

    <div class="page" id='choix'></div>

    <%- include('./partials/footer.ejs') %>

</body>
</html>